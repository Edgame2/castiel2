{
  "name": "@castiel/api",
  "version": "1.0.0",
  "private": true,
  "description": "Castiel API Service",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "tsc --noEmitOnError false 2>&1; NODE_OPTIONS='--no-warnings' node dist/index.js",
    "dev:watch": "tsc --watch --preserveWatchOutput & sleep 2 && node --watch dist/index.js",
    "dev:tsx": "TSX_DISABLE_IPC=1 TSX_DISABLE_WATCHER=1 tsx src/index.ts",
    "dev:tsx-watch": "tsx watch --clear-screen=false --exclude '**/node_modules' --exclude '**/.pnpm' --exclude '**/dist' --exclude '**/.turbo' --exclude '**/.next' --exclude '**/coverage' --exclude 'node_modules/**' --exclude '.pnpm/**' src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "init-db": "tsx src/scripts/init-cosmos-db.ts",
    "init-web-search": "tsx src/scripts/init-web-search-containers.ts",
    "seed-types": "tsx src/scripts/seed-core-types.ts",
    "seed-widgets": "tsx src/scripts/seed-widget-catalog.ts",
    "migrate:documents": "tsx src/scripts/migrate-document-settings.ts",
    "seed:prompts": "tsx src/scripts/seed-system-prompts.ts",
    "seed:triggers": "tsx src/scripts/seed-proactive-triggers.ts",
    "verify:audit-logs": "tsx src/scripts/verify-audit-logs.ts",
    "verify:blob-storage": "tsx src/scripts/verify-blob-storage-containers.ts",
    "verify:alerts": "tsx src/scripts/verify-alert-configuration.ts",
    "verify:containers": "tsx src/scripts/verify-containers.ts",
    "verify:shard-types": "tsx src/scripts/verify-shard-types.ts",
    "validate:shard-types": "tsx src/scripts/validate-core-shard-types.ts",
    "validate:env": "tsx src/scripts/validate-env.ts",
    "export:openapi": "tsx src/scripts/export-openapi.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:check-config": "tsx tests/utils/test-config-checker.ts",
    "test:fix": "tsx tests/utils/test-auto-fixer.ts",
    "test:setup": "bash ../../scripts/setup-test-environment.sh",
    "test:complete": "bash ../../scripts/run-complete-test-suite.sh",
    "test:all": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/embedding",
    "test:suite": "vitest run tests/suite",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo *.tsbuildinfo"
  },
  "dependencies": {
    "@azure/core-auth": "^1.10.1",
    "@azure/cosmos": "^4.7.0",
    "@azure/openai": "^2.0.0",
    "@azure/storage-blob": "^12.23.0",
    "@azure/arm-machinelearning": "^1.0.0",
    "@azure/ai-inference": "^1.0.0",
    "@castiel/azure-ad-b2c": "workspace:*",
    "@castiel/key-vault": "workspace:*",
    "@castiel/monitoring": "workspace:*",
    "@castiel/queue": "workspace:*",
    "@castiel/redis-utils": "workspace:*",
    "@castiel/shared-types": "workspace:*",
    "@fastify/compress": "^8.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/multipart": "^8.3.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@fastify/websocket": "^10.0.1",
    "@googleapis/calendar": "^2.0.0",
    "@googleapis/drive": "^2.0.0",
    "@googleapis/gmail": "^2.0.0",
    "@googleapis/people": "^2.0.0",
    "@googleapis/tasks": "^2.0.0",
    "@hocuspocus/server": "^3.4.3",
    "@node-saml/passport-saml": "^5.1.0",
    "@sendgrid/mail": "^8.1.6",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "argon2": "^0.31.2",
    "axios": "^1.13.2",
    "cheerio": "^1.0.0-rc.12",
    "dataloader": "^2.2.2",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.2",
    "google-auth-library": "^9.0.0",
    "googleapis": "^144.0.0",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.23.0",
    "html-to-docx": "^1.8.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "jwks-rsa": "^3.1.0",
    "langchain": "^0.1.0",
    "mercurius": "^14.1.0",
    "ms": "^2.1.3",
    "mustache": "^4.2.0",
    "openai": "^4.62.1",
    "pino": "^8.17.2",
    "pptxgenjs": "^4.0.1",
    "puppeteer": "^24.32.0",
    "qrcode": "^1.5.4",
    "resend": "^6.5.2",
    "speakeasy": "^2.0.0",
    "uuid": "^13.0.0",
    "xml2js": "^0.6.2",
    "yjs": "^13.6.27",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@fastify/cookie": "^9.4.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/ms": "^2.1.0",
    "@types/mustache": "^4.2.6",
    "@types/node": "^20.10.6",
    "@types/qrcode": "^1.5.6",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^11.0.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint-config-prettier": "^10.1.8",
    "glob": "^11.1.0",
    "ioredis-mock": "^8.9.0",
    "supertest": "^6.3.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^1.1.0"
  }
}