[Unit]
Description=Castiel UI (Next.js) for revimize-dev
After=network.target

[Service]
Type=simple
User=ubuntu
# Set CASTIEL_REPO_ROOT if repo is not at /home/ubuntu/dev/castiel2
Environment=CASTIEL_REPO_ROOT=/home/ubuntu/dev/castiel2
Environment=NODE_ENV=production
WorkingDirectory=/home/ubuntu/dev/castiel2/ui
ExecStart=/home/ubuntu/dev/castiel2/deployment/scripts/run-ui-server.sh
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
