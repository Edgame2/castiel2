{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dashboard Service Module Configuration",
  "type": "object",
  "required": ["module", "server", "cosmos_db", "rabbitmq"],
  "properties": {
    "module": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" }
      }
    },
    "server": {
      "type": "object",
      "required": ["port", "host"],
      "properties": {
        "port": { "type": ["integer", "string"], "minimum": 1, "maximum": 65535 },
        "host": { "type": "string" }
      }
    },
    "cosmos_db": {
      "type": "object",
      "required": ["endpoint", "key"],
      "properties": {
        "endpoint": { "type": "string", "format": "uri" },
        "key": { "type": "string" },
        "database_id": { "type": "string", "default": "castiel" },
        "containers": {
          "type": "object",
          "properties": {
            "dashboards": { "type": "string" },
            "widgets": { "type": "string" },
            "admin_data": { "type": "string" },
            "widget_cache": { "type": "string" }
          }
        }
      }
    },
    "services": {
      "type": "object",
      "properties": {
        "logging": {
          "type": "object",
          "properties": {
            "url": { "type": "string", "format": "uri" }
          }
        },
        "analytics_service": {
          "type": "object",
          "properties": {
            "url": { "type": "string", "format": "uri" }
          }
        },
        "cache_service": {
          "type": "object",
          "properties": {
            "url": { "type": "string", "format": "uri" }
          }
        }
      }
    },
    "rabbitmq": {
      "type": "object",
      "required": ["url", "exchange", "queue"],
      "properties": {
        "url": { "type": "string", "format": "uri" },
        "exchange": { "type": "string" },
        "queue": { "type": "string" }
      }
    },
    "redis": {
      "type": "object",
      "properties": {
        "url": { "type": "string", "format": "uri" },
        "host": { "type": "string" },
        "port": { "type": ["integer", "string"], "minimum": 1, "maximum": 65535 },
        "password": { "type": "string" },
        "db": { "type": ["integer", "string"], "minimum": 0 }
      }
    }
  }
}
