{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["server", "cosmos_db"],
  "properties": {
    "module": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" }
      }
    },
    "server": {
      "type": "object",
      "required": ["port"],
      "properties": {
        "port": { "type": "number" },
        "host": { "type": "string" }
      }
    },
    "cosmos_db": {
      "type": "object",
      "required": ["endpoint", "key", "database_id"],
      "properties": {
        "endpoint": { "type": "string" },
        "key": { "type": "string" },
        "database_id": { "type": "string" },
        "containers": {
          "type": "object",
          "properties": {
            "sync_tasks": { "type": "string" },
            "executions": { "type": "string" },
            "conflicts": { "type": "string" },
            "webhooks": { "type": "string" }
          },
          "required": ["sync_tasks", "executions", "conflicts", "webhooks"]
        }
      }
    },
    "jwt": {
      "type": "object",
      "required": ["secret"],
      "properties": {
        "secret": { "type": "string" }
      }
    },
    "services": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "url": { "type": "string" }
        }
      }
    },
    "rabbitmq": {
      "type": "object",
      "properties": {
        "url": { "type": "string" },
        "exchange": { "type": "string" },
        "queue": { "type": "string" },
        "bindings": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "sync_scheduler": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "interval_ms": { "type": "number" },
        "batch_size": { "type": "number" }
      }
    },
    "token_refresh": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "interval_ms": { "type": "number" },
        "expiration_threshold_ms": { "type": "number" }
      }
    },
    "sync_limits": {
      "type": "object",
      "properties": {
        "max_records_per_sync": { "type": "number", "minimum": 1, "default": 1000 },
        "min_interval_minutes": { "type": "number", "minimum": 0, "default": 5 },
        "max_concurrent_syncs_per_tenant": { "type": "number", "minimum": 1, "maximum": 10, "default": 3 }
      }
    },
    "mapping": {
      "type": "object",
      "properties": {
        "queue_name": { "type": "string", "default": "integration_data_raw" },
        "dlq_name": { "type": "string", "default": "integration_data_raw.dlq" },
        "batch_size": { "type": "number", "minimum": 1, "default": 50 },
        "batch_threshold": { "type": "number", "minimum": 1, "default": 100 },
        "batch_concurrency": { "type": "number", "minimum": 1, "default": 10 },
        "retry_attempts": { "type": "number", "minimum": 0, "default": 3 },
        "retry_backoff_ms": { "type": "number", "minimum": 0, "default": 1000 },
        "timeout_seconds": { "type": "number", "minimum": 1, "default": 30 },
        "prefetch": { "type": "number", "minimum": 1, "default": 20 },
        "idempotency_ttl": { "type": "number", "minimum": 1, "default": 86400 },
        "config_cache_ttl": { "type": "number", "minimum": 1, "default": 600 },
        "circuit_breaker_threshold": { "type": "number", "minimum": 1, "default": 5 },
        "circuit_breaker_timeout": { "type": "number", "minimum": 1, "default": 60000 },
        "opportunity_batch_threshold": { "type": "number", "minimum": 1, "default": 100 },
        "opportunity_batch_size": { "type": "number", "minimum": 1, "default": 50 },
        "publish_opportunity_events": { "type": "string", "enum": ["immediate", "batch", "debounce", "none"], "default": "immediate" }
      }
    },
    "features": {
      "type": "object",
      "additionalProperties": { "type": "boolean" }
    }
  }
}
