{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Integration Manager Module Configuration",
  "type": "object",
  "required": ["module", "server", "cosmos_db", "rabbitmq"],
  "properties": {
    "module": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" }
      }
    },
    "server": {
      "type": "object",
      "required": ["port", "host"],
      "properties": {
        "port": { "type": ["integer", "string"], "minimum": 1, "maximum": 65535 },
        "host": { "type": "string" }
      }
    },
    "cosmos_db": {
      "type": "object",
      "required": ["endpoint", "key"],
      "properties": {
        "endpoint": { "type": "string", "format": "uri" },
        "key": { "type": "string" },
        "database_id": { "type": "string", "default": "castiel" },
        "containers": {
          "type": "object",
          "properties": {
            "providers": { "type": "string" },
            "integrations": { "type": "string" },
            "sync_tasks": { "type": "string" },
            "webhooks": { "type": "string" },
            "executions": { "type": "string" },
            "conflicts": { "type": "string" },
            "catalog": { "type": "string" },
            "visibility": { "type": "string" },
            "connections": { "type": "string" },
            "sync_conflicts": { "type": "string" },
            "jobs": { "type": "string" },
            "content_templates": { "type": "string" },
            "templates": { "type": "string" },
            "template_versions": { "type": "string" },
            "context_templates": { "type": "string" },
            "email_templates": { "type": "string" }
          }
        }
      }
    },
    "services": {
      "type": "object",
      "properties": {
        "logging": {
          "type": "object",
          "properties": {
            "url": { "type": "string", "format": "uri" }
          }
        },
        "user_management": {
          "type": "object",
          "properties": {
            "url": { "type": "string", "format": "uri" }
          }
        },
        "shard_manager": {
          "type": "object",
          "properties": {
            "url": { "type": "string", "format": "uri" }
          }
        },
        "secret_management": {
          "type": "object",
          "properties": {
            "url": { "type": "string", "format": "uri" }
          }
        },
        "ai_service": {
          "type": "object",
          "properties": {
            "url": { "type": "string", "format": "uri" }
          }
        }
      }
    },
    "rabbitmq": {
      "type": "object",
      "required": ["url", "exchange", "queue"],
      "properties": {
        "url": { "type": "string", "format": "uri" },
        "exchange": { "type": "string" },
        "queue": { "type": "string" },
        "routingKeys": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Routing keys for event consumer (default: integration.sync.check-due, integration.token.check-expiring, integration.*)"
        }
      }
    }
  }
}
