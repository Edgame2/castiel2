{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["server", "cosmos_db"],
  "properties": {
    "module": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" }
      }
    },
    "server": {
      "type": "object",
      "required": ["port"],
      "properties": {
        "port": { "type": "number" },
        "host": { "type": "string" }
      }
    },
    "cosmos_db": {
      "type": "object",
      "required": ["endpoint", "key", "database_id"],
      "properties": {
        "endpoint": { "type": "string" },
        "key": { "type": "string" },
        "database_id": { "type": "string" },
        "containers": {
          "type": "object",
          "properties": {
            "sync_tasks": { "type": "string" },
            "executions": { "type": "string" },
            "conflicts": { "type": "string" },
            "webhooks": { "type": "string" }
          },
          "required": ["sync_tasks", "executions", "conflicts", "webhooks"]
        }
      }
    },
    "jwt": {
      "type": "object",
      "required": ["secret"],
      "properties": {
        "secret": { "type": "string" }
      }
    },
    "services": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "url": { "type": "string" }
        }
      }
    },
    "rabbitmq": {
      "type": "object",
      "properties": {
        "url": { "type": "string" },
        "exchange": { "type": "string" },
        "queue": { "type": "string" },
        "bindings": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "sync_scheduler": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "interval_ms": { "type": "number" },
        "batch_size": { "type": "number" }
      }
    },
    "token_refresh": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "interval_ms": { "type": "number" },
        "expiration_threshold_ms": { "type": "number" }
      }
    },
    "sync_limits": {
      "type": "object",
      "properties": {
        "max_records_per_sync": { "type": "number", "minimum": 1, "default": 1000 },
        "min_interval_minutes": { "type": "number", "minimum": 0, "default": 5 },
        "max_concurrent_syncs_per_tenant": { "type": "number", "minimum": 1, "maximum": 10, "default": 3 }
      }
    }
  }
}
