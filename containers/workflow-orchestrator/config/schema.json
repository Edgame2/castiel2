{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["server", "cosmos_db"],
  "properties": {
    "application_insights": {
      "type": "object",
      "properties": {
        "connection_string": { "type": "string" },
        "disable": { "type": "boolean" }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "path": { "type": "string" },
        "require_auth": { "type": "boolean" },
        "bearer_token": { "type": "string" }
      }
    },
    "module": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" }
      }
    },
    "server": {
      "type": "object",
      "required": ["port"],
      "properties": {
        "port": { "type": "number" },
        "host": { "type": "string" }
      }
    },
    "cosmos_db": {
      "type": "object",
      "required": ["endpoint", "key", "database_id"],
      "properties": {
        "endpoint": { "type": "string" },
        "key": { "type": "string" },
        "database_id": { "type": "string" },
        "containers": {
          "type": "object",
          "properties": {
            "workflows": { "type": "string" },
            "steps": { "type": "string" },
            "executions": { "type": "string" },
            "hitl_approvals": { "type": "string", "description": "Plan §972; HITL approval requests from hitl.approval.requested" }
          },
          "required": ["workflows", "steps", "executions"]
        }
      }
    },
    "jwt": {
      "type": "object",
      "required": ["secret"],
      "properties": {
        "secret": { "type": "string" }
      }
    },
    "services": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "url": { "type": "string" }
        }
      }
    },
    "rabbitmq": {
      "type": "object",
      "properties": {
        "url": { "type": "string" },
        "exchange": { "type": "string" },
        "queue": { "type": "string" }
      }
    },
    "batch_jobs": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "risk_snapshot_backfill_cron": { "type": "string" },
        "outcome_sync_cron": { "type": "string" },
        "industry_benchmarks_cron": { "type": "string", "description": "Plan §915, §953; default 0 4 * * *; worker: risk-analytics" },
        "risk_clustering_cron": { "type": "string", "description": "Plan §915; default 0 2 * * * (2 AM); worker: risk-analytics" },
        "account_health_cron": { "type": "string", "description": "Plan §915; default 0 3 * * * (3 AM); worker: risk-analytics" },
        "propagation_cron": { "type": "string", "description": "Plan §915; default 0 5 * * * (5 AM); worker: risk-analytics" },
        "model_monitoring_cron": { "type": "string", "description": "Plan §9.3, §940; default 0 6 * * 0 (Sun 6 AM); worker: ml-service or risk-analytics" }
      }
    }
  }
}
