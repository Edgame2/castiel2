# Environment Configuration Example
# Copy this file to .env and fill in your values

# Node Environment
NODE_ENV=development

# Cosmos DB Configuration
COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-db-key
COSMOS_DB_DATABASE_ID=castiel

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_ISSUER=coder
JWT_AUDIENCE=coder-api
JWT_EXPIRATION=7d
JWT_REFRESH_EXPIRATION=30d

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin

# Service URLs (for inter-service communication)
AUTH_URL=http://localhost:3021
USER_MANAGEMENT_URL=http://localhost:3022
SECRET_MANAGEMENT_URL=http://localhost:3003
LOGGING_URL=http://localhost:3014
NOTIFICATION_MANAGER_URL=http://localhost:3001
AI_SERVICE_URL=http://localhost:3006
EMBEDDINGS_URL=http://localhost:3005
DASHBOARD_URL=http://localhost:3011

# API Gateway
API_GATEWAY_PORT=3001

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30000

# Service Authentication (for service-to-service calls)
SERVICE_AUTH_TOKEN=your-service-auth-token

# Monitoring (optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=

