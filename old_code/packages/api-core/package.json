{
  "name": "@castiel/api-core",
  "version": "1.0.0",
  "private": true,
  "description": "Shared API services and repositories for Azure Functions",
  "type": "module",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./workers-sync": "./src/workers-sync.ts",
    "./services/*": "./src/services/*.ts",
    "./repositories/*": "./src/repositories/*.ts",
    "./types/*": "./src/types/*.ts",
    "./integrations/*": "./src/integrations/*.ts"
  },
  "scripts": {
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@azure/cosmos": "^4.9.0",
    "@azure/storage-blob": "^12.29.1",
    "@azure/ai-form-recognizer": "^5.1.0",
    "@castiel/monitoring": "workspace:*",
    "@castiel/shared-types": "workspace:*",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@azure/functions": "^4.5.1",
    "@types/node": "^20.19.25",
    "@types/uuid": "^9.0.0",
    "typescript": "^5.3.3"
  }
}

