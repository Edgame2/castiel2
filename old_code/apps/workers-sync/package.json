{
  "name": "@castiel/workers-sync",
  "version": "1.0.0",
  "private": true,
  "description": "Sync workers for Castiel platform",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "start": "node dist/index.js",
