# Example Terraform Variables File
# Copy this file to terraform.tfvars and update with your values

environment = "dev"
location    = "eastus"

# Existing Resource Group name
resource_group_name = "rg-castiel-integration-dev"

# Key Vault ID (optional - uncomment and set if you want secrets stored in Key Vault)
# key_vault_id = "/subscriptions/00000000-0000-0000-0000-000000000000/resourceGroups/rg-castiel-integration-dev/providers/Microsoft.KeyVault/vaults/castiel-kv-dev"

# Network access settings
enable_public_network_access = true

# Custom subdomains (optional)
# computer_vision_custom_subdomain = "castiel-vision-dev"
# speech_custom_subdomain = "castiel-speech-dev"

# Common tags
common_tags = {
  ManagedBy = "Terraform"
  Project   = "Castiel"
  Component = "Integration"
  Environment = "dev"
}
