{
  "name": "castiel-enterprise",
  "version": "1.0.0",
  "description": "Castiel - Root Package",
  "private": true,
  "scripts": {
    "lint:all": "pnpm -r --filter './containers/*' lint",
    "lint:fix": "pnpm -r --filter './containers/*' lint --fix",
    "type-check:all": "pnpm -r --filter './containers/*' exec tsc --noEmit",
    "test:all": "pnpm -r --filter './containers/*' test",
    "test:unit:all": "pnpm -r --filter './containers/*' run test:unit",
    "test:coverage": "pnpm -r --filter './containers/*' test:coverage",
    "format:check": "prettier --check \"containers/**/*.{ts,tsx,json,yaml,md}\"",
    "format:write": "prettier --write \"containers/**/*.{ts,tsx,json,yaml,md}\"",
    "build:all": "pnpm -r --filter './containers/*' build",
    "clean": "pnpm -r --filter './containers/*' exec rm -rf dist coverage node_modules/.cache",
    "dev:infra": "docker-compose -f docker-compose.dev.yml up -d",
    "dev:infra:down": "docker-compose -f docker-compose.dev.yml down",
    "dev:infra:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "security:audit": "npm audit --audit-level=moderate",
    "prepare": "husky install || true"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}

