{
  "name": "@castiel/root",
  "version": "1.0.0",
  "private": true,
  "description": "Castiel - Enterprise B2B SaaS Platform",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "turbo dev --filter=@castiel/web --filter=@castiel/api",
    "dev:api": "turbo dev --filter=@castiel/api",
    "dev:api:tsx": "pnpm --filter @castiel/api dev:tsx",
    "dev:web": "turbo dev --filter=@castiel/web",
    "dev:workers": "turbo dev --filter=@castiel/workers-sync --filter=@castiel/workers-processing --filter=@castiel/workers-ingestion",
    "dev:workers-sync": "turbo dev --filter=@castiel/workers-sync",
    "dev:workers-processing": "turbo dev --filter=@castiel/workers-processing",
    "dev:workers-ingestion": "turbo dev --filter=@castiel/workers-ingestion",
    "dev:all": "turbo dev --filter=@castiel/web --filter=@castiel/api --filter=@castiel/workers-sync --filter=@castiel/workers-processing --filter=@castiel/workers-ingestion",
    "build": "turbo build",
    "build:api": "turbo build --filter=@castiel/api",
    "build:web": "turbo build --filter=@castiel/web",
    "build:workers": "turbo build --filter=@castiel/workers-sync --filter=@castiel/workers-processing --filter=@castiel/workers-ingestion",
    "build:workers-sync": "turbo build --filter=@castiel/workers-sync",
    "build:workers-processing": "turbo build --filter=@castiel/workers-processing",
    "build:workers-ingestion": "turbo build --filter=@castiel/workers-ingestion",
    "start": "turbo start",
    "start:api": "turbo start --filter=@castiel/api",
    "start:web": "turbo start --filter=@castiel/web",
    "start:workers": "turbo start --filter=@castiel/workers-sync --filter=@castiel/workers-processing --filter=@castiel/workers-ingestion",
    "start:workers-sync": "turbo start --filter=@castiel/workers-sync",
    "start:workers-processing": "turbo start --filter=@castiel/workers-processing",
    "start:workers-ingestion": "turbo start --filter=@castiel/workers-ingestion",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "format": "pnpm --recursive format",
    "db:init": "tsx scripts/init-database.ts",
    "db:seed": "tsx scripts/seed-database.ts",
    "db:reset": "pnpm db:init && pnpm db:seed",
    "tenant:provision": "tsx scripts/provision-castiel-tenant.ts",
    "seed:prompts": "pnpm --filter @castiel/api run seed:prompts",
    "generate-mock-data": "tsx scripts/generate-mock-data.ts"
  },
  "keywords": [
    "saas",
    "b2b",
    "enterprise",
    "multi-tenant",
    "fastify",
    "nextjs",
    "typescript"
  ],
  "author": "Castiel Team",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.25",
    "@vitest/ui": "^4.0.14",
    "axios": "^1.13.2",
    "dotenv": "^16.6.1",
    "js-yaml": "^4.1.1",
    "turbo": "^2.6.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "@azure/cosmos": "^4.7.0",
    "@azure/identity": "^4.13.0",
    "@azure/keyvault-secrets": "^4.10.0",
    "tsx": "^4.20.6"
  }
}
