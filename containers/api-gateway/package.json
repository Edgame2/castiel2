{
  "name": "@coder/api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for Castiel - Routes requests to microservices",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
