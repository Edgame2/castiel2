    "axios": "^1.7.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/http-proxy": "^11.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/swagger": "^9.1.0",
    "@fastify/swagger-ui": "^5.0.0",
    "fastify": "^5.1.0",
    "yaml": "^2.7.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.0",
    "@vitest/coverage-v8": "^4.0.0"
  }
}